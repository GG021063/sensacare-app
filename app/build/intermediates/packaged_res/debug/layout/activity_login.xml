<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="32dp"
    android:background="@color/white">

    <!-- Sensacare logo -->
    <ImageView
        android:id="@+id/logoImage"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/sensacare_logo"
        android:contentDescription="Sensacare App"
        android:layout_marginBottom="24dp" />

    <!-- Heading -->
    <TextView
        android:id="@+id/welcomeHeading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome to Sensacare"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@color/primary"
        android:layout_marginBottom="8dp" />

    <!-- Tagline -->
    <TextView
        android:id="@+id/welcomeTagline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Connect your device and monitor your vitals effortlessly"
        android:textSize="14sp"
        android:textColor="@color/text_secondary"
        android:gravity="center"
        android:layout_marginBottom="24dp" />

    <!-- Authentication Mode Toggle -->
    <LinearLayout
        android:id="@+id/authModeToggle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:orientation="horizontal"
        android:gravity="center">

        <!-- Password mode tab -->
        <TextView
            android:id="@+id/passwordModeButton"
            android:layout_width="0dp"
            android:layout_height="36dp"
            android:layout_weight="1"
            android:layout_marginEnd="2dp"
            android:background="@color/primary"
            android:gravity="center"
            android:padding="8dp"
            android:text="PASSWORD"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textSize="11sp" />

        <!-- Magic-Link mode tab -->
        <TextView
            android:id="@+id/otpModeButton"
            android:layout_width="0dp"
            android:layout_height="36dp"
            android:layout_weight="1"
            android:layout_marginStart="2dp"
            android:background="@android:color/transparent"
            android:gravity="center"
            android:padding="8dp"
            android:text="OTP"
            android:textAllCaps="true"
            android:textColor="@color/primary"
            android:textSize="11sp" />

    </LinearLayout>

    <!-- Email Input (common to both modes) -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/emailInputLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        style="@style/Widget.Sensacare.TextInputLayout">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/usernameInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:autofillHints="emailAddress"
            style="@style/Widget.Sensacare.EditText"
            android:maxLines="1" />

    </com.google.android.material.textfield.TextInputLayout>

    <!-- Password Mode Container -->
    <LinearLayout
        android:id="@+id/passwordModeContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Password Input -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/passwordInputLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            style="@style/Widget.Sensacare.TextInputLayout"
            app:passwordToggleEnabled="true">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/passwordInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Password"
                android:inputType="textPassword"
                style="@style/Widget.Sensacare.EditText"
                android:maxLines="1" />

        </com.google.android.material.textfield.TextInputLayout>

        <!-- Login Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/loginButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Login"
            android:textSize="16sp"
            android:padding="16dp"
            style="@style/Widget.Sensacare.Button.Primary" />

    </LinearLayout>

    <!-- OTP Mode Container -->
    <LinearLayout
        android:id="@+id/otpModeContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">

        <!-- OTP Input (initially hidden) -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/otpInputLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            style="@style/Widget.Sensacare.TextInputLayout"
            android:visibility="gone">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/otpInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter 6-digit code from email"
                android:inputType="number"
                android:maxLength="6"
                style="@style/Widget.Sensacare.EditText"
                android:maxLines="1" />

        </com.google.android.material.textfield.TextInputLayout>

        <!-- OTP Instructions -->
        <TextView
            android:id="@+id/otpInstructions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="We'll send a 6-digit code to your email. No password needed!"
            android:textSize="14sp"
            android:textColor="@color/text_secondary"
            android:gravity="center"
            android:layout_marginBottom="16dp" />

        <!-- Send Magic Link Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/sendMagicLinkButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Send OTP Code"
            android:textSize="16sp"
            android:padding="16dp"
            style="@style/Widget.Sensacare.Button.Primary" />

        <!-- Verify OTP Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/verifyOtpButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Verify Code"
            android:textSize="16sp"
            android:padding="16dp"
            android:visibility="gone"
            style="@style/Widget.Sensacare.Button.Primary" />

    </LinearLayout>

    <!-- Common buttons for both modes -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="8dp">

        <!-- Sign Up Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/signUpButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Create Account"
            android:textSize="14sp"
            android:padding="12dp"
            style="?attr/materialButtonOutlinedStyle" />

        <!-- Get Started / Onboarding Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/getStartedButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="New User? Get Started"
            android:textSize="14sp"
            android:padding="12dp"
            style="?attr/materialButtonOutlinedStyle" />

        <!-- Demo Login Button (for testing) -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/demoLoginButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Demo Login (admin@sensacare.com)"
            android:textSize="14sp"
            android:padding="12dp"
            style="?attr/materialButtonOutlinedStyle" />

    </LinearLayout>

    <!-- Progress Bar -->
    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:visibility="gone" />

    <!-- Offline Queue Status -->
    <TextView
        android:id="@+id/offlineQueueStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Offline queue: 0 items"
        android:textSize="12sp"
        android:textColor="@color/text_secondary"
        android:visibility="gone" />

</LinearLayout>