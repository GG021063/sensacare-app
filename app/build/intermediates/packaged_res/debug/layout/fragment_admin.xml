<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="🔧 Admin Dashboard"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="@color/primary" />

            <Button
                android:id="@+id/exportButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="📊 Export CSV"
                android:textSize="12sp"
                android:background="@drawable/admin_button_background"
                android:textColor="@color/white" />

        </LinearLayout>

        <!-- Statistics -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/admin_section_background"
            android:padding="12dp"
            android:layout_marginBottom="16dp">

            <TextView
                android:id="@+id/statsText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="📊 Statistics (Last 24 hours)\nTotal Vitals: 0\nCritical Alerts: 0\nWarning Alerts: 0\nAvg Heart Rate: 0.0 bpm\nAvg SpO2: 0.0%"
                android:textSize="12sp"
                android:fontFamily="monospace"
                android:background="@drawable/stats_background"
                android:padding="8dp" />

        </LinearLayout>

        <!-- Filters Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/admin_section_background"
            android:padding="12dp"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="🔍 Filters"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp" />

            <!-- Date Range Filter -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Date Range:"
                    android:textSize="12sp"
                    android:layout_marginEnd="8dp" />

                <Spinner
                    android:id="@+id/dateRangeSpinner"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/spinner_background" />

            </LinearLayout>

            <!-- Alert Level Filter -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Alert Level:"
                    android:textSize="12sp"
                    android:layout_marginEnd="8dp" />

                <Spinner
                    android:id="@+id/alertLevelSpinner"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/spinner_background" />

            </LinearLayout>

            <!-- Event Type Filter -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Event Type:"
                    android:textSize="12sp"
                    android:layout_marginEnd="8dp" />

                <Spinner
                    android:id="@+id/eventTypeSpinner"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/spinner_background" />

            </LinearLayout>

        </LinearLayout>

        <!-- Pagination Controls -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="16dp">

            <Button
                android:id="@+id/prevPageButton"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:text="◀ Previous"
                android:textSize="12sp"
                android:background="@drawable/admin_button_background"
                android:textColor="@color/white"
                android:layout_marginEnd="8dp" />

            <TextView
                android:id="@+id/pageInfoText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Page 1 of 1 (0 total)"
                android:textSize="12sp"
                android:gravity="center"
                android:layout_marginHorizontal="16dp" />

            <Button
                android:id="@+id/nextPageButton"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:text="Next ▶"
                android:textSize="12sp"
                android:background="@drawable/admin_button_background"
                android:textColor="@color/white"
                android:layout_marginStart="8dp" />

        </LinearLayout>

        <!-- Vitals Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/admin_section_background"
            android:padding="12dp"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Recent Vitals"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/vitalsRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="@drawable/recycler_background"
                android:padding="4dp"
                android:scrollbars="vertical" />

        </LinearLayout>

        <!-- Alerts Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/admin_section_background"
            android:padding="12dp"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Alerts &amp; Flags"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/alertsRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:background="@drawable/recycler_background"
                android:padding="4dp"
                android:scrollbars="vertical" />

        </LinearLayout>

        <!-- Events Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/admin_section_background"
            android:padding="12dp"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="BLE &amp; Sync Events"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/eventsRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="@drawable/recycler_background"
                android:padding="4dp"
                android:scrollbars="vertical" />

        </LinearLayout>

    </LinearLayout>
</ScrollView> 