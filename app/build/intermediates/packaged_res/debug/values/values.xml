<?xml version="1.0" encoding="utf-8"?>
<resources>
    <color name="accent">#10B981</color>
    <color name="accent_secondary">#F59E0B</color>
    <color name="accent_variant">#059669</color>
    <color name="background">#F8FAFC</color>
    <color name="black">#000000</color>
    <color name="card_background">#FFFFFF</color>
    <color name="card_elevation">#F1F5F9</color>
    <color name="divider">#E2E8F0</color>
    <color name="error">#EF4444</color>
    <color name="ic_launcher_background">@color/sensacare_primary</color>
    <color name="info">#3B82F6</color>
    <color name="overlay">#000000</color>
    <color name="primary">#313B67</color>
    <color name="primary_dark">#262D4F</color>
    <color name="primary_light">#5A6690</color>
    <color name="primary_variant">#424D77</color>
    <color name="scrim">#000000</color>
    <color name="sensacare_primary">#313B67</color>
    <color name="success">#10B981</color>
    <color name="surface">#FFFFFF</color>
    <color name="surface_variant">#F8FAFC</color>
    <color name="text_disabled">#94A3B8</color>
    <color name="text_on_primary">#FFFFFF</color>
    <color name="text_on_surface">#1E293B</color>
    <color name="text_primary">#1E293B</color>
    <color name="text_secondary">#64748B</color>
    <color name="warning">#F59E0B</color>
    <color name="white">#FFFFFF</color>
    <style name="TextAppearance.Sensacare.Body1" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:letterSpacing">0.03</item>
    </style>
    <style name="TextAppearance.Sensacare.Body2" parent="TextAppearance.MaterialComponents.Body2">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/text_secondary</item>
        <item name="android:letterSpacing">0.02</item>
    </style>
    <style name="TextAppearance.Sensacare.Caption" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/text_secondary</item>
        <item name="android:letterSpacing">0.04</item>
    </style>
    <style name="TextAppearance.Sensacare.Headline1" parent="TextAppearance.MaterialComponents.Headline1">
        <item name="android:textSize">32sp</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:letterSpacing">-0.01</item>
    </style>
    <style name="TextAppearance.Sensacare.Headline2" parent="TextAppearance.MaterialComponents.Headline2">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:letterSpacing">0</item>
    </style>
    <style name="TextAppearance.Sensacare.Headline3" parent="TextAppearance.MaterialComponents.Headline3">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:letterSpacing">0.01</item>
    </style>
    <style name="Widget.Sensacare.Button.Primary" parent="Widget.MaterialComponents.Button">
        <item name="android:textAppearance">@style/TextAppearance.Sensacare.Body1</item>
        <item name="android:textColor">@color/text_on_primary</item>
        <item name="backgroundTint">@color/primary</item>
        <item name="cornerRadius">12dp</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:paddingStart">24dp</item>
        <item name="android:paddingEnd">24dp</item>
    </style>
    <style name="Widget.Sensacare.Button.Secondary" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textAppearance">@style/TextAppearance.Sensacare.Body1</item>
        <item name="android:textColor">@color/primary</item>
        <item name="strokeColor">@color/primary</item>
        <item name="cornerRadius">12dp</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:paddingStart">24dp</item>
        <item name="android:paddingEnd">24dp</item>
    </style>
    <style name="Widget.Sensacare.Card" parent="Widget.MaterialComponents.CardView">
        <item name="cardElevation">2dp</item>
        <item name="cardCornerRadius">16dp</item>
        <item name="cardBackgroundColor">@color/card_background</item>
        <item name="contentPadding">16dp</item>
    </style>
    <style name="Widget.Sensacare.Card.Elevated" parent="Widget.Sensacare.Card">
        <item name="cardElevation">8dp</item>
    </style>
    <style name="Widget.Sensacare.EditText" parent="Widget.MaterialComponents.TextInputEditText.OutlinedBox">
        
        <item name="android:textColor">@color/text_primary</item>
        
        <item name="android:textColorHint">@color/text_secondary</item>
        
        <item name="android:background">@android:color/transparent</item>
    </style>
    <style name="Widget.Sensacare.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxCornerRadiusTopStart">12dp</item>
        <item name="boxCornerRadiusTopEnd">12dp</item>
        <item name="boxCornerRadiusBottomStart">12dp</item>
        <item name="boxCornerRadiusBottomEnd">12dp</item>
        <item name="boxStrokeColor">@color/primary</item>
        <item name="hintTextColor">@color/primary</item>
        
        <item name="boxBackgroundColor">@color/white</item>
        <item name="android:textColorHint">@color/text_secondary</item>
        
        <item name="editTextStyle">@style/Widget.Sensacare.EditText</item>
    </style>
</resources>