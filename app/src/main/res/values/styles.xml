<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Typography Styles -->
    <style name="TextAppearance.Sensacare.Headline1" parent="TextAppearance.MaterialComponents.Headline1">
        <item name="android:textSize">32sp</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:letterSpacing">-0.01</item>
    </style>

    <style name="TextAppearance.Sensacare.Headline2" parent="TextAppearance.MaterialComponents.Headline2">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:letterSpacing">0</item>
    </style>

    <style name="TextAppearance.Sensacare.Headline3" parent="TextAppearance.MaterialComponents.Headline3">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:letterSpacing">0.01</item>
    </style>

    <style name="TextAppearance.Sensacare.Body1" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:letterSpacing">0.03</item>
    </style>

    <style name="TextAppearance.Sensacare.Body2" parent="TextAppearance.MaterialComponents.Body2">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/text_secondary</item>
        <item name="android:letterSpacing">0.02</item>
    </style>

    <style name="TextAppearance.Sensacare.Caption" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/text_secondary</item>
        <item name="android:letterSpacing">0.04</item>
    </style>

    <!-- Button Styles -->
    <style name="Widget.Sensacare.Button.Primary" parent="Widget.MaterialComponents.Button">
        <item name="android:textAppearance">@style/TextAppearance.Sensacare.Body1</item>
        <item name="android:textColor">@color/text_on_primary</item>
        <item name="backgroundTint">@color/primary</item>
        <item name="cornerRadius">12dp</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:paddingStart">24dp</item>
        <item name="android:paddingEnd">24dp</item>
    </style>

    <style name="Widget.Sensacare.Button.Secondary" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textAppearance">@style/TextAppearance.Sensacare.Body1</item>
        <item name="android:textColor">@color/primary</item>
        <item name="strokeColor">@color/primary</item>
        <item name="cornerRadius">12dp</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:paddingStart">24dp</item>
        <item name="android:paddingEnd">24dp</item>
    </style>

    <!-- Card Styles -->
    <style name="Widget.Sensacare.Card" parent="Widget.MaterialComponents.CardView">
        <item name="cardElevation">2dp</item>
        <item name="cardCornerRadius">16dp</item>
        <item name="cardBackgroundColor">@color/card_background</item>
        <item name="contentPadding">16dp</item>
    </style>

    <style name="Widget.Sensacare.Card.Elevated" parent="Widget.Sensacare.Card">
        <item name="cardElevation">8dp</item>
    </style>

    <!-- Input Styles -->
    <style name="Widget.Sensacare.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxCornerRadiusTopStart">12dp</item>
        <item name="boxCornerRadiusTopEnd">12dp</item>
        <item name="boxCornerRadiusBottomStart">12dp</item>
        <item name="boxCornerRadiusBottomEnd">12dp</item>
        <item name="boxStrokeColor">@color/primary</item>
        <item name="hintTextColor">@color/primary</item>
        <!-- Ensure consistent white background & visible hints -->
        <item name="boxBackgroundColor">@color/white</item>
        <item name="android:textColorHint">@color/text_secondary</item>
        <!-- Use custom EditText style so entered text is always visible -->
        <item name="editTextStyle">@style/Widget.Sensacare.EditText</item>
    </style>

    <!-- EditText inside TextInputLayout -->
    <style name="Widget.Sensacare.EditText" parent="Widget.MaterialComponents.TextInputEditText.OutlinedBox">
        <!-- Visible input text -->
        <item name="android:textColor">@color/text_primary</item>
        <!-- Visible hint inside field when box is collapsed -->
        <item name="android:textColorHint">@color/text_secondary</item>
        <!-- Remove default underline / coloured background -->
        <item name="android:background">@android:color/transparent</item>
    </style>
</resources> 