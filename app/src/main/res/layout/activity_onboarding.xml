<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".OnboardingActivity">

    <!-- Progress Indicator -->
    <LinearLayout
        android:id="@+id/progressContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="24dp"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.progressindicator.LinearProgressIndicator
            android:id="@+id/progressIndicator"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:trackColor="@color/divider"
            app:indicatorColor="@color/primary"
            app:trackThickness="4dp" />

        <TextView
            android:id="@+id/stepCounter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="1/6"
            android:textColor="@color/primary"
            android:textSize="14sp"
            android:textStyle="bold" />

    </LinearLayout>

    <!-- Main Content Area -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toBottomOf="@id/progressContainer"
        app:layout_constraintBottom_toTopOf="@id/buttonContainer">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="32dp">

            <!-- Step Image -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_marginBottom="32dp"
                style="@style/Widget.Sensacare.Card.Elevated"
                app:cardCornerRadius="60dp">

                <ImageView
                    android:id="@+id/stepImage"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_welcome"
                    android:contentDescription="Step illustration"
                    android:padding="24dp"
                    android:scaleType="fitCenter"
                    android:tint="@color/primary" />

            </com.google.android.material.card.MaterialCardView>

            <!-- Step Title -->
            <TextView
                android:id="@+id/stepTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Welcome to Sensacare"
                android:textAppearance="@style/TextAppearance.Sensacare.Headline1"
                android:gravity="center"
                android:layout_marginBottom="16dp"
                tools:text="Welcome to Sensacare" />

            <!-- Step Description -->
            <TextView
                android:id="@+id/stepDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="This app connects to your medical devices to monitor your vital signs. Let's get you set up!"
                android:textAppearance="@style/TextAppearance.Sensacare.Body1"
                android:gravity="center"
                android:lineSpacingExtra="4dp"
                tools:text="This app connects to your medical devices to monitor your vital signs. Let's get you set up!" />

        </LinearLayout>

    </ScrollView>

    <!-- Button Container -->
    <LinearLayout
        android:id="@+id/buttonContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="24dp"
        android:gravity="center_vertical"
        app:layout_constraintBottom_toBottomOf="parent">

        <!-- Back Button -->
        <Button
            android:id="@+id/backButton"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:text="Back"
            android:textColor="@color/text_secondary"
            android:background="@drawable/button_outline"
            android:visibility="gone"
            android:layout_marginEnd="16dp" />

        <!-- Skip Button -->
        <Button
            android:id="@+id/skipButton"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:text="Skip"
            android:textColor="@color/text_secondary"
            android:background="@drawable/button_outline"
            android:layout_marginEnd="16dp" />

        <!-- Next Button -->
        <Button
            android:id="@+id/nextButton"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:text="Get Started"
            android:textColor="@color/white"
            android:background="@drawable/button_primary"
            android:textStyle="bold" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout> 