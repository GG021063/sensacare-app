<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/surface_variant">

    <!-- Status Banner -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/connectionStatusBanner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:visibility="visible"
        app:cardElevation="4dp"
        app:cardCornerRadius="12dp"
        app:cardBackgroundColor="@color/primary"
        app:layout_behavior="com.google.android.material.behavior.HideBottomViewOnScrollBehavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="16dp">

            <ImageView
                android:id="@+id/connectionStatusIcon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginEnd="12dp"
                android:src="@drawable/ic_bluetooth_disconnected"
                android:tint="@color/white"
                android:contentDescription="Connection Status" />

            <TextView
                android:id="@+id/connectionStatusText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Disconnected"
                android:textAppearance="@style/TextAppearance.Sensacare.Body1"
                android:textColor="@color/white" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/connectionActionButton"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:text="Connect"
                android:textSize="12sp"
                android:minWidth="0dp"
                android:minHeight="0dp"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                style="@style/Widget.Sensacare.Button.Secondary"
                android:textColor="@color/white"
                app:strokeColor="@color/white" />

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

    <!-- Main Content -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- RPM Status Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                style="@style/Widget.Sensacare.Card">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="RPM System Status"
                        android:textAppearance="@style/TextAppearance.Sensacare.Headline3"
                        android:layout_marginBottom="12dp" />

                    <TextView
                        android:id="@+id/rpmStatusText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="RPM Status: Not Initialized"
                        android:textAppearance="@style/TextAppearance.Sensacare.Body2"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:id="@+id/vitalsStatusText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Vitals Status: No Data"
                        android:textAppearance="@style/TextAppearance.Sensacare.Body2" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- RPM Alerts Container -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/rpmAlertsContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:visibility="gone"
                style="@style/Widget.Sensacare.Card"
                app:cardBackgroundColor="@color/warning">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="RPM Alert"
                        android:textAppearance="@style/TextAppearance.Sensacare.Body1"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:id="@+id/rpmAlertText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textAppearance="@style/TextAppearance.Sensacare.Body2"
                        android:textColor="@color/white" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Vitals Cards Grid -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="24dp">

                <!-- Heart Rate Card -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/heartRateCard"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    style="@style/Widget.Sensacare.Card">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <!-- Header -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:layout_marginBottom="12dp">

                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:src="@drawable/ic_heart_rate"
                                android:tint="@color/error"
                                android:contentDescription="Heart Rate" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:layout_marginStart="8dp"
                                android:text="Heart Rate"
                                android:textAppearance="@style/TextAppearance.Sensacare.Body1"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/heartRateValue"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="--"
                                android:textAppearance="@style/TextAppearance.Sensacare.Headline2"
                                android:textColor="@color/error" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="4dp"
                                android:text="bpm"
                                android:textAppearance="@style/TextAppearance.Sensacare.Caption" />

                        </LinearLayout>

                        <!-- Trend -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">

                            <ImageView
                                android:id="@+id/heartRateTrend"
                                android:layout_width="16dp"
                                android:layout_height="16dp"
                                android:src="@drawable/ic_trend_up"
                                android:tint="@color/success"
                                android:contentDescription="Trend" />

                            <TextView
                                android:id="@+id/heartRateTrendText"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="4dp"
                                android:text="+2 from last reading"
                                android:textAppearance="@style/TextAppearance.Sensacare.Caption"
                                android:textColor="@color/success" />

                        </LinearLayout>

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

                <!-- Blood Pressure Card -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/bloodPressureCard"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    style="@style/Widget.Sensacare.Card">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:layout_marginBottom="12dp">

                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:src="@drawable/ic_blood_pressure"
                                android:tint="@color/warning"
                                android:contentDescription="Blood Pressure" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:layout_marginStart="8dp"
                                android:text="Blood Pressure"
                                android:textAppearance="@style/TextAppearance.Sensacare.Body1"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/bloodPressureValue"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="--/--"
                                android:textAppearance="@style/TextAppearance.Sensacare.Headline2"
                                android:textColor="@color/warning" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="4dp"
                                android:text="mmHg"
                                android:textAppearance="@style/TextAppearance.Sensacare.Caption" />

                        </LinearLayout>

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

                <!-- SpO2 Card -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/spo2Card"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    style="@style/Widget.Sensacare.Card">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:layout_marginBottom="12dp">

                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:src="@drawable/ic_spo2"
                                android:tint="@color/info"
                                android:contentDescription="SpO2" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:layout_marginStart="8dp"
                                android:text="SpO2"
                                android:textAppearance="@style/TextAppearance.Sensacare.Body1"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/spo2Value"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="--"
                                android:textAppearance="@style/TextAppearance.Sensacare.Headline2"
                                android:textColor="@color/info" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="4dp"
                                android:text="%"
                                android:textAppearance="@style/TextAppearance.Sensacare.Caption" />

                        </LinearLayout>

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

                <!-- Temperature Card -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/temperatureCard"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/Widget.Sensacare.Card">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:layout_marginBottom="12dp">

                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:src="@drawable/ic_temperature"
                                android:tint="@color/accent_secondary"
                                android:contentDescription="Temperature" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:layout_marginStart="8dp"
                                android:text="Temperature"
                                android:textAppearance="@style/TextAppearance.Sensacare.Body1"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/temperatureValue"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="--"
                                android:textAppearance="@style/TextAppearance.Sensacare.Headline2"
                                android:textColor="@color/accent_secondary" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="4dp"
                                android:text="Â°C"
                                android:textAppearance="@style/TextAppearance.Sensacare.Caption" />

                        </LinearLayout>

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

            </LinearLayout>

            <!-- Overall Alert Status -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/overallAlertContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:visibility="gone"
                style="@style/Widget.Sensacare.Card"
                app:cardBackgroundColor="@color/error">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:padding="12dp">

                    <ImageView
                        android:id="@+id/overallAlertIcon"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_warning"
                        android:tint="@color/white"
                        android:layout_marginEnd="12dp" />

                    <TextView
                        android:id="@+id/overallAlertText"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Alert message"
                        android:textAppearance="@style/TextAppearance.Sensacare.Body1"
                        android:textStyle="bold"
                        android:textColor="@color/white" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Charts Section -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                style="@style/Widget.Sensacare.Card">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Vitals Trends (Last 24 Hours)"
                        android:textAppearance="@style/TextAppearance.Sensacare.Headline3"
                        android:layout_marginBottom="16dp" />

                    <!-- Heart Rate Chart -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Heart Rate"
                        android:textAppearance="@style/TextAppearance.Sensacare.Body1"
                        android:textStyle="bold"
                        android:layout_marginBottom="8dp" />

                    <com.github.mikephil.charting.charts.LineChart
                        android:id="@+id/heartRateChart"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:layout_marginBottom="16dp" />

                    <!-- SpO2 Chart -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="SpO2"
                        android:textAppearance="@style/TextAppearance.Sensacare.Body1"
                        android:textStyle="bold"
                        android:layout_marginBottom="8dp" />

                    <com.github.mikephil.charting.charts.LineChart
                        android:id="@+id/spo2Chart"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:layout_marginBottom="16dp" />

                    <!-- Temperature Chart -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Temperature"
                        android:textAppearance="@style/TextAppearance.Sensacare.Body1"
                        android:textStyle="bold"
                        android:layout_marginBottom="8dp" />

                    <com.github.mikephil.charting.charts.LineChart
                        android:id="@+id/temperatureChart"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:layout_marginBottom="16dp" />

                    <!-- Blood Pressure Chart -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Blood Pressure"
                        android:textAppearance="@style/TextAppearance.Sensacare.Body1"
                        android:textStyle="bold"
                        android:layout_marginBottom="8dp" />

                    <com.github.mikephil.charting.charts.BarChart
                        android:id="@+id/bloodPressureChart"
                        android:layout_width="match_parent"
                        android:layout_height="200dp" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Action Buttons -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="80dp">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/startServiceButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Start Monitoring"
                    android:layout_marginBottom="8dp"
                    style="@style/Widget.Sensacare.Button.Primary" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/stopServiceButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Stop Monitoring"
                    android:layout_marginBottom="8dp"
                    style="@style/Widget.Sensacare.Button.Secondary" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/diagnosticButton"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Diagnostics"
                        android:layout_marginEnd="4dp"
                        style="@style/Widget.Sensacare.Button.Secondary" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/adminButton"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Admin"
                        android:layout_marginStart="4dp"
                        style="@style/Widget.Sensacare.Button.Secondary" />

                </LinearLayout>

            </LinearLayout>

            <!-- RPM Navigation -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/timelineButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Timeline"
                    android:layout_marginEnd="4dp"
                    style="@style/Widget.Sensacare.Button.Secondary" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/consentButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Consent"
                    android:layout_marginStart="4dp"
                    android:layout_marginEnd="4dp"
                    style="@style/Widget.Sensacare.Button.Secondary" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/rpmSetupButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="RPM Setup"
                    android:layout_marginStart="4dp"
                    style="@style/Widget.Sensacare.Button.Secondary" />

            </LinearLayout>

            <!-- Service Status -->
            <TextView
                android:id="@+id/serviceStatusText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Service Status: Stopped"
                android:textAppearance="@style/TextAppearance.Sensacare.Body2"
                android:layout_marginTop="16dp" />

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    <!-- Floating Action Button -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabQuickAction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="16dp"
        android:src="@drawable/ic_add"
        app:backgroundTint="@color/primary"
        app:tint="@color/white" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>
